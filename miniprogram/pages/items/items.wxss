/* pages/items/items.wxss */
.items{
  width: 96%;
  height: 100%;
  margin: 0 2%;
}
.header{
  width: 100%;
  text-align: center;
  margin: 25rpx 0;
}
.itemlists{
  width: 98%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.item{
  width: 100%;
  height: 18vh;
  margin-bottom: 5rpx;
  border-radius: 10px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.item image{
  width: 35vw;
  height: 96%;
  margin: 3.5rpx 0 1.5rpx 0;
  border-radius: 10px 0 0 10px;
}
.itemtext{
  width: 55vw;
  height: 100%;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.itemtext view{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.itemtext text{
  height: 50%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}